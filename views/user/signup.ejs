<% layout("layout/biolerplate") %>

    <div class="row mt-3">
        <div class="col-6 offset-3">

            <form method="post" action="/signup" class="needs-validation" novalidate>

                <div class="mb-3">
                    <label for="username" class="form-label"><b> username</b></label>
                    <input name="username" type="text" class="form-control" required />
                    <div class="invalid-feedback"> username name should be valid</div>

                </div>


                <div class="mb-3">
                    <label for="email" class="form-label"><b>email</b></label>
                    <input name="email" type="email" class="form-control" required />
                    <div class="invalid-feedback"> email should be valid</div>

                </div>


                <div class="mb-3">
                    <label for="password" class="form-label"><b>password</b></label>
                    <input name="password" type="password" class="form-control" required />
                    <div class="invalid-feedback"> password should be valid</div>

                </div>
                <button class="btn btn-success"> signup</button>

            </form>
        </div>
    </div>