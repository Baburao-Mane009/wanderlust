 <% layout("layout/biolerplate") %>

   <div class="row mt-3">
    <div class="col-8 offset-2">
  <h3>Edit Listing</h3>
  <form method="post" action="/listing/<%= listings._id %>?_method=PUT" class="needs-validation" novalidate>
  
<div class="mb-3">
        <label for="title" class="form-label">Title</label>
      <input name="listings[title]" value="<%= listings.title %>" type="text" placeholder="Title"  class="form-control" required/>
    <div class="invalid-feedback"> title name should be valid</div>
    </div>
    <div class="mb-3">
        <label for="description" class="form-label">Description</label>
      <input name="listings[description]" value="<%= listings.description %>" type="text" placeholder="Description"  class="form-control" required/>
    <div class="invalid-feedback">description name should be valid</div>
    </div>
       <div class="mb-3">
                    <label for="image" class="form-label">Image</label>
                    <input name="listing[image]"  value="<%= listings.image %>" placeholder="image URL/link" type="text" class="form-control" required>
                    <div class="invalid-feedback">image name should be valid</div>
                </div>
   
      <div class="row ">
 <div class="mb-3 col-md-4">
        <label for="price" class="form-label">Price</label>
      <input name="listings[price]" value="<%= listings.price %>" type="number" placeholder="Price"  class="form-control" required/>
    <div class="invalid-feedback">price name should be valid</div>
    </div>
    <div class="mb-3 col-md-8">
        <label for="location" class="form-label">Location</label>
    
      <input name="listings[location]" value="<%= listings.location %>" type="text" placeholder="Location" class="form-control" required/>
      <div class="invalid-feedback">location name should be valid</div>
    </div>

      </div>
      
    <div class="mb-3">
        <label for="countary" class="form-label">Countary</label>
      <input name="listings[country]" value="<%= listings.country %>" type="text" placeholder="Country"  class="form-control" required/> 
    <div class="invalid-feedback">countary name should be valid</div>
    </div>
    
      <button class="btn btn-dark edit-btn mb-3"> Edit </button>
  </form>


</div>
</div>