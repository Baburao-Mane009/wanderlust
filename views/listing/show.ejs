    <% layout("layout/biolerplate") %>

<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-8">

      <h3 class="mb-4 text-center">Listing Details</h3>

      <div class="card show-card">
        <img src="<%= listings.image.url %>" class="card-img-top show-img" alt="listing_image">

        <div class="card-body">
          <h5 class="card-title"><strong><%= listings.title %></strong></h5>
          <p class="card-text"><%= listings.description %></p>
          <p class="card-text"><strong>Price:</strong> â‚¹<%= listings.price.toLocaleString("en-IN") %></p>
          <p class="card-text"><strong>Location:</strong> <%= listings.location %>, <%= listings.country %></p>
        </div>
      </div>

      <div class="d-flex justify-content-between mt-4">
        <a href="/listing/<%= listings._id %>/edit" class="btn btn-outline-primary">Edit</a>

        <form method="POST" action="/listing/<%= listings._id %>?_method=DELETE">
          <button type="submit" class="btn btn-outline-danger">Delete</button>
        </form>
      </div>

    </div>
  </div>
</div>
